<div class="container">
    <div class="row">
        {% for item in content %}
        <div class="col-md-4 text-center">
            <div class="box">
                <div class="box-content">
                    <h1 class="tag-title">{{ item.title }}</h1>
                    <hr/>
                    <p>{{ item.description }}</p>
                    <br/>
                    <a href="{{ item.cta }}" class="btn btn-block btn-primary"> {{ 'Learn more' | t }}</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>