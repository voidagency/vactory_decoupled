<div class="fdb-block">
        {% if extra_fields.title is not empty %}
          <div class="row text-center py-5">
            <div class="col">
                <h2>{{ extra_fields.title }}</h2>
            </div>
          </div>
        {% endif %}

    <div class="row mt-5 align-items-top">

        {% for item in content %}

            {% if loop.index >= 2 %}
                <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-left pt-4 pt-lg-0">
            {% else %}
                <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-left">
            {% endif %}

                <div class="bg-gray pb-5 pt-5 pl-4 pr-4 br">
                    {% if item.title  is not empty %}
                        <h2 class="font-weight-light">{{ item.title }}</h2>
                    {% endif %}
                    <hr>
                    {% if item.price  is not empty %}
                        <p class="text-h2"><strong>{{ item.price }}</strong></p>
                    {% endif %}
                    {% if item.description  is not empty %}
                        <p class="text-h4">{{ item.description | nl2br }}</p>
                    {% endif %}
                    <hr>
                    {% if item.lists  is not empty %}
                        <div class="text-right"><em>{{ item.lists.value | raw }}</em></div>
                    {% endif %}
                    {% if item.link is not empty %}
                        {% set link_target = (content.0.link_target > 0) ? '_blank' : '_self' %}
                        <p class="text-center pt-4"><a class="btn btn-outline-primary" href="{{ item.link }}" target="{{ link_target }}">{{ item.link_alt }}</a></p>
                    {% endif %}
                </div>

            </div>

        {% endfor %}

    </div>
</div>
