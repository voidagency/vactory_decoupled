{% set image_uri = (content.0.image.0 is defined) ? get_image(content.0.image.0) : '' %}
{% set fluid_image = image_uri|image_style('max_1300x1300') %}
{% set lqip_image = image_uri|image_style('lqip') %}

<div class="fdb-block">
  <div class="row">
    <div class="col-12">
      <div class="row justify-content-center pb-5">
        <div class="col-12 col-lg-8 text-center">
          {% if content.0.title is not empty %}
            <h2>{{ content.0.title }}</h2>
          {% endif %}
        </div>
      </div>
      {% if content.0.image.0 is not empty %}
      <div class="row justify-content-center">
        <div class="col-8 lazy-wrapper">
          <img alt="{{  content.0.image_alt }}"
            class="img-fluid lazyload"
            src="{{ lqip_image }}"
            data-src="{{ fluid_image }}">
        </div>
      </div>
    {% endif %}
  </div>
</div>
