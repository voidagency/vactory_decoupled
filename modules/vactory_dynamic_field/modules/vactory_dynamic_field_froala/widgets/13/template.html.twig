{% set image_uri_1 = (content.0.image_1.0 is defined) ? get_image(content.0.image_1.0) : '' %}
{% set thumbnail_1 = image_uri_1|image_style('thumbnail') %}
{% set lqip_image_1 = image_uri_1|image_style('lqip') %}

{% set image_uri_2 = (content.0.image_2.0 is defined) ? get_image(content.0.image_2.0) : '' %}
{% set thumbnail_2 = image_uri_2|image_style('thumbnail') %}
{% set lqip_image_2 = image_uri_2|image_style('lqip') %}

{% set image_uri_3 = (content.0.image_3.0 is defined) ? get_image(content.0.image_3.0) : '' %}
{% set thumbnail_3 = image_uri_3|image_style('thumbnail') %}
{% set lqip_image_3 = image_uri_3|image_style('lqip') %}

<div class="fdb-block">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center">
            <div class="row justify-content-center pb-4">
                {% if content.0.image_1.0 is not empty %}
                <div class="col-4 col-sm-3 col-md-2">
                    <img alt="{{ content.0.image_alt }}"
                        class="img-fluid lazyload fdb-icon"
                        src="{{ lqip_image_1 }}"
                        data-src="{{ thumbnail_1 }}">
                </div>
                {% endif %}
                {% if content.0.image_2.0 is not empty %}
                <div class="col-4 col-sm-3 col-md-2">
                    <img alt="{{ content.0.image_alt }}"
                        class="img-fluid lazyload fdb-icon"
                        src="{{ lqip_image_2 }}"
                        data-src="{{ thumbnail_2 }}">
                </div>
                {% endif %}
                {% if content.0.image_3.0 is not empty %}
                <div class="col-4 col-sm-3 col-md-2">
                    <img alt="{{ content.0.image_alt }}"
                        class="img-fluid lazyload fdb-icon"
                        src="{{ lqip_image_3 }}"
                        data-src="{{ thumbnail_3 }}">
                </div>
                {% endif %}
            </div>
            {% if content.0.description is not empty %}
            <div class="text-h3">{{ content.0.description.value|raw }}</div>
            {% endif %}
        </div>
    </div>
</div>
