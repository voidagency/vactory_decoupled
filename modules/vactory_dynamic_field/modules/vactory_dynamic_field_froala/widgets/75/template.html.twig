            {% if loop.index == 5 %}

                </div><div class="row text-left justify-content-sm-center pt-3 pt-lg-5">

            {% endif %}

            {% if loop.index == 1 or loop.index == 5 %}
                <div class="col-12 col-sm-6 col-lg-3 col-xl-2 ml-xl-auto mr-xl-auto">
            {% else %}
                <div class="col-12 col-sm-6 col-lg-3 col-xl-2 ml-xl-auto mr-xl-auto pt-3 pt-md-0 pt-lg-0">
            {% endif %}
                {% if content.0.title is not empty %}
                    <h3><strong>{{ item.title }}</strong></h3>
                {% endif %}
                {% if content.0.title is not empty %}
                    <p>{{ item.description }}</p>
                {% endif %}
            </div>

        {% endfor %}

    </div>
</div>