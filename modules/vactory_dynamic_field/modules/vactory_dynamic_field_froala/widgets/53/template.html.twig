<div class="fdb-block">
            {% if extra_fields.title is not empty %}
              <div class="row text-center">
                <div class="col">
                <h2>{{ extra_fields.title }}</h2>
                </div>
              </div>
            {% endif %}
    <div class="row mt-5 align-items-top">

        {% for item in content %}

            {% if loop.index >= 2 %}
                <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-center pt-4 pt-lg-0">
            {% else %}
                <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-center">
            {% endif %}

                <div class="bg-gray pb-5 pt-5 pl-4 pr-4 br">
                    {% if item.title is not empty %}
                        <h3><strong>{{ item.title }}</strong></h3>
                    {% endif %}
                    {% if item.subtitle is not empty %}
                        <p class="text-h4">{{ item.subtitle }}</p>
                    {% endif %}
                    {% if item.price is not empty %}
                        <p class="text-h1 mt-5">{{ item.price }}</p>
                    {% endif %}
                    {% if  item.description is not empty %}
                        <p>{{ item.description | nl2br }}</p>
                    {% endif %}
                    <hr>
                    {% if  item.lists is not empty %}
                        <div>{{ item.lists.value | raw }}</div>
                    {% endif %}
                    {% if item.link is not empty and item.link_alt is not empty %}
                        {% set link_target = (content.0.link_target > 0) ? '_blank' : '_self' %}
                        <p class="text-center pt-5"><a class="btn btn-outline-primary" href="{{ item.link }}" target="{{ link_target }}">{{ item.link_alt }}</a></p>
                    {% endif %}
                </div>

            </div>

        {% endfor %}

    </div>
</div>
