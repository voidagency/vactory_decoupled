<div class="fdb-block team-7">
    <div class="row text-center justify-content-center">
        <div class="col-8">
            <h2>Title</h2>
        </div>
    </div>
    <div class="row justify-content-center vf-slick-slider vf-slick-mobile" data-arrows="false">
        {% for item in 0..2 %}
            <div class="col-12 col-sm-6 col-lg-4 mx-auto mb-3">
                <div class="row align-items-center">
                    <div class="col-sm-4 col-12 d-flex d-sm-block justify-content-center">
                        {% set placehold = "https://picsum.photos/id/" ~ random(1, 200) ~ "/97/97.jpg" %}
                         <img alt="Image Alt"
                            class="img-fluid lazyload rounded-circle"
                            src="{{ content.image_placeholder }}"
                            data-src="{{ placehold }}">
                    </div>
                    <div class="col-sm-8 col-12 d-flex d-sm-block justify-content-center flex-column text-center text-sm-left">
                        <h3>Jhon Doe</h3>
                        <p>Role</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
