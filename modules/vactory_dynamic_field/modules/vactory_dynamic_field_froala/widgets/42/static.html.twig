<div class="fdb-block">
    <div class="container py-5">
        <div class="row align-items-center justify-content-center">

            {% for item in 0..1 %}
            {% set placehold = "https://picsum.photos/id/" ~ random(1, 200) ~ "/60/60.jpg" %}
            {% if loop.index == 2 %}
            <div class="col-lg-9 col-xl-6 mt-4 mt-xl-0">
                {% else %}
                <div class="col-lg-9 col-xl-6">
                    {% endif %}


                    <div class="fdb-box">
                        <div class="row">
                            <div class="col-8 col-sm-6 col-md-4 col-xl-3 ml-auto mr-auto">
                                <img alt="Image Alt"
                                    class="img-fluid lazyload rounded-circle"
                                    src="{{ content.image_placeholder }}"
                                    data-src="{{ placehold }}">

                            </div>

                            <div class="col-md-8 mt-4 mt-md-0">
                                <p class="text-h3">"Even the all-powerful Pointing has no control about day however a small line of blind text by the name of Lorem Ipsum decided to leave for the far World of Grammar."</p>
                                <p class="text-h3 mt-4 mt-xl-5"><strong>Person Name
                                  </strong></p>
                                <p><em>Co-founder at Company</em></p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

