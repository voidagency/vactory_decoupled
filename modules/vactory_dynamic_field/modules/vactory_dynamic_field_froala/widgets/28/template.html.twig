{% set floated = (content.0.mode == 1)? 'justify-content-end' : '' %}
{% set touch = (content.0.touch == 1)? 'fdb-touch' : '' %}

<div class="fdb-block py-0">
  <div class="row text-left {{ floated }}">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="fdb-box rounded-bottom-0 {{ touch }}">
        {% if content.0.title is not empty %}
          <h2><strong>{{ content.0.title }}</strong></h2>
        {% endif %}
        {% if content.0.description is not empty %}
          <p class="text-h3">{{ content.0.description }}</p>
        {% endif %}
        {% if content.0.link is not empty and content.0.link_alt is not empty %}
          {% set link_target = (content.0.link_target > 0) ? '_blank' : '_self' %}
          <p class="text-h3 mt-4"><a href="{{ content.0.link }}" target="{{ link_target }}">{{ content.0.link_alt }}</a>
          </p>
        {% endif %}
      </div>
    </div>
  </div>
</div>
