<div class="fdb-block">
            {% if extra_fields.title is not empty %}
            <div class="row text-center">
              <div class="col">
                <h2>{{ extra_fields.title }}</h2>
              </div>
            </div>
            {% endif %}
    <div class="row mt-5 align-items-top">

        {% for item in content %}

            {% if loop.index >= 2 %}
                <div class="col-12 col-sm-10 col-md-6 col-lg-5 m-auto col-xl-3 text-left pt-5 pt-md-0">
            {% else %}
                <div class="col-12 col-sm-10 col-md-6 col-lg-5 m-auto col-xl-3 text-left">
            {% endif %}

                <div class="bg-gray p-3 text-center br sl-1">
                    {% if item.title is not empty %}
                         <h2 class="font-weight-light">{{ item.title }}</h2>
                    {% endif %}
                    {% if item.price is not empty %}
                        <p class="text-h2">{{ item.price }}</p>
                    {% endif %}
                    {% if item.link is not empty and item.link_alt is not empty %}
                        {% set link_target = (content.0.link_target > 0) ? '_blank' : '_self' %}
                         <p class="text-center"><a class="btn btn-primary mt-4" href="{{ item.link }}" target="{{ link_target }}">{{ item.link_alt }}</a></p>
                    {% endif %}
                    <hr class="mt-5 mb-5">
                    {% if item.lists is not empty %}
                        <div>{{ item.lists.value | raw }}</div>
                    {% endif %}
                </div>

            </div>

        {% endfor %}

    </div>
</div>
