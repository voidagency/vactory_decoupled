<div class="fdb-block">
    <div class="row text-center">
        <div class="col">
            <h2>Title</h2>
        </div>
    </div>
    <div class="row mt-5 align-items-top">

        {% for item in 0..2 %}

        {% if loop.index >= 2 %}
        <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-left pt-4 pt-lg-0">
            {% else %}
            <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-left">
                {% endif %}

                <div class="br">
                    <div class="bg-dark p-3 text-center">

                        <h2 class="font-weight-light">Item Title</h2>


                        <p class="text-h2"><strong>99â‚¬</strong></p>

                    </div>

                    <div class="bg-gray p-5 text-center">
                        {% set placehold = "https://picsum.photos/id/" ~ random(1, 200) ~ "/40/40.jpg" %}

                        <p>
                            <img alt="Image Alt" height="40"
                                class="lazyload"
                                src="{{ content.image_placeholder }}"
                                data-src="{{ placehold }}">
                        </p>
                        <p class="text-h4"><strong>Subtitle</strong></p>
                        <p>&nbsp;</p>
                        <div>Values</div>
                        <p class="text-center pt-5"><a class="btn btn-primary" href="#">Read More</a></p>
                    </div>
                </div>

            </div>

            {% endfor %}

        </div>
    </div>
