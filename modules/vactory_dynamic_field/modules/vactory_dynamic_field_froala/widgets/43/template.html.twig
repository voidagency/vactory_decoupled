<div class="fdb-block fdb-block-hasbackground">
    <div class="row justify-content-center text-center">
        <div class="col">

            {% for item in content %}

                {% set image_uri =(item.logo.0 is defined) ? get_image(item.logo.0) : '' %}
                {% set logo_company = image_uri|image_style('thumbnail') %}
                {% set lqip_image = image_uri|image_style('lqip') %}
                {% if item.logo.0 is not empty %}
                    <img alt="{{ item.image_alt }}" height="40"
                        class="ml-3 mr-3 mb-2 mt-2 lazyload"
                        src="{{ lqip_image }}"
                        data-src="{{ logo_company }}">
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
